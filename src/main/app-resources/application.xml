	<parameter id="ulx">-9.75</parameter>
	<parameter id="lry">36.75</parameter>
	<parameter id="lrx">3.00</parameter>  
	<parameter id="deg">0.75</parameter>
      </defaultParameters>    
    </jobTemplate>
  </jobTemplates> 
 
  <!-- Local static degradation CS(x)  -->
    <jobTemplates>
    <jobTemplate id="static_cx">
      <streamingExecutable>/application/bin/ISD1_CxDx/climatic_dataset_001.sh</streamingExecutable>
      <defaultParameters>
        <parameter id="y1">1989</parameter>
        <parameter id="y2">2014</parameter>
      </defaultParameters>    
    </jobTemplate>
  </jobTemplates>
  
  <!-- Local dynamic degradation D(x)  -->
    <jobTemplates>
    <jobTemplate id="dynamic_dx">
      <streamingExecutable>/application/bin/ISD1_CxDx/climatic_dataset_002.sh</streamingExecutable>
       <defaultParameters>
        <parameter id="y1">1989</parameter>
        <parameter id="y2">2014</parameter>
      </defaultParameters>   
    </jobTemplate>
  </jobTemplates>


  <!-- Local vegetation status V(x)  -->
     <jobTemplates>
    <jobTemplate id="vgt_vx">
      <streamingExecutable>/application/bin/ISD2_Vx/vgt_to_geoms_001.sh</streamingExecutable>
      <defaultParameters>
        <parameter id="y3">2000</parameter>
        <parameter id="y4">2010</parameter>
	<parameter id="y5">2014</parameter>
	<parameter id="uly">43.8979</parameter>
	<parameter id="ulx">-9.7309</parameter>
	<parameter id="lry">35.9438</parameter>
	<parameter id="lrx">3.4086</parameter>
	<parameter id="drive">Gtiff</parameter>
	<parameter id="cloud%">30</parameter> 
	<parameter id="Band">NDVI</parameter> 
      </defaultParameters>    
    </jobTemplate>
  </jobTemplates> 
