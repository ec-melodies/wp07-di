  <!-- Accessing ECMWF data servers in batch (ecmwfapi)  -->
  <jobTemplates>
    <jobTemplate id="ecmwfapi">
      <streamingExecutable>/application/bin/ISD1_CxDx/climatic_dataset_000.sh</streamingExecutable>
      <defaultParameters>
        <parameter id="y1">1989</parameter>
        <parameter id="y2">2014</parameter>
