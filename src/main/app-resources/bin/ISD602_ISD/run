#!/bin/sh
#-------------------------------------------------------------------------------------# 
# PURPOSE: ISD
#-------------------------------------------------------------------------------------# 
start=`date +%s`
#-------------------------------------------------------------------------------------# 
export DIR=~/data/ISD/ISD000/
if [ ! -d "$DIR" ]; then
    mkdir $DIR
fi

export -p IXDIR=/home/melodies-ist/wp07-di/src/main/app-resources/bin/ISD602_ISD/bin/
#-------------------------------------------------------------------------------------# 

#-------------------------------------------------------------------------------------# 
function igcx(){
exec $IXDIR"isd_003.sh" $1 $2
}

#-------------------------------------------------------------------------------------# 
while IFS='' read -r line || [[ -n "$line" ]]; do
	if [[ "$line" == AOI1 ]] ; then	
		BX=$(grep "Dx001" $2)
		CR=$(grep "Cx001" $2)

		igcx $BX $CR 
	
	elif [[ "$line" == AOI2 ]] ; then	
		BX=$(grep "Dx001" $2)
		CR=$(grep "Cx001" $2)

		igcx $BX $CR 

	elif [[ "$line" == AOI3 ]] ; then
		BX=$(grep "Dx001" $2)
		CR=$(grep "Cx001" $2)

		igcx $BX $CR 

	elif [[ "$line" == AOI4 ]] ; then
		BX=$(grep "Dx001" $2)
		CR=$(grep "Cx001" $2)

		igcx $BX $CR 

	else
		echo "AOI out of range"
	fi 
done < "$1"
#done < $inputfile
#-------------------------------------------------------------------------------------# 
end=`date +%s`
runtime=$((end-start))
echo "Runtime: $runtime seconds"
#-------------------------------------------------------------------------------------# 
exit 0 