#!/bin/sh
#-------------------------------------------------------------------------------------# 
# PURPOSE: run file for Ix
#-------------------------------------------------------------------------------------# 
#-------------------------------------------------------------------------------------# 
# source the ciop functions (e.g. ciop-log)
source ${ciop_job_include}

export DIR=~/data/ISD/ISD000/
if [ ! -d "$DIR" ]; then
    mkdir $DIR
fi

export -p IXDIR=/home/melodies-ist/wp07-di/src/main/app-resources/bin/ISD000_Ix/bin/

#-------------------------------------------------------------------------------------# 
function icx()
{
exec $IXDIR"resample_aoi_00101.sh" $1 &
wait 
exec $IXDIR"resample_aoi_00105.sh" 
}

#-------------------------------------------------------------------------------------# 
while IFS='' read -r line || [[ -n "$line" ]]; do
	if [[ "$line" == AOI1 ]] ; then	
		icx $2 
	elif [[ "$line" == AOI2 ]] ; then
		icx $2
	elif [[ "$line" == AOI3 ]] ; then
		icx $2
	elif [[ "$line" == AOI4 ]] ; then
		icx $2
	else
		echo "AOI out of range"
	fi 
done < "$1"
#done < $inputfile
#-------------------------------------------------------------------------------------# 
#-------------------------------------------------------------------------------------# 

