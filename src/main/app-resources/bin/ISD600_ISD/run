#!/bin/sh
#-------------------------------------------------------------------------------------# 
# PURPOSE: isd_cx
#-------------------------------------------------------------------------------------# 
start=`date +%s`
#-------------------------------------------------------------------------------------# 
export DIR=~/data/ISD/ISD000/
if [ ! -d "$DIR" ]; then
    mkdir $DIR
fi

export -p IXDIR=/home/melodies-ist/wp07-di/src/main/app-resources/bin/ISD600_ISD/bin/

#-------------------------------------------------------------------------------------# 

#-------------------------------------------------------------------------------------# 
function igcx(){
exec $IXDIR"isd_cx001.sh" $1
}

#-------------------------------------------------------------------------------------# 
while IFS='' read -r line || [[ -n "$line" ]]; do
	if [[ "$line" == AOI1 ]] ; then	
		PAR=$(grep "ssdirCx_AOI1" $2)

		igcx $PAR
	
	elif [[ "$line" == AOI2 ]] ; then

		PAR=$(grep "ssdirCx_AOI2" $2)

		igcx $PARR

	elif [[ "$line" == AOI3 ]] ; then

		PAR=$(grep "ssdirCx_AOI3" $2)

		igcx $PAR

	elif [[ "$line" == AOI4 ]] ; then

		PAR=$(grep "ssdirCx_AOI4" $2)

		igcx $PAR
	else
		echo "AOI out of range"
	fi 
done < "$1"
#done < $inputfile
#-------------------------------------------------------------------------------------# 
end=`date +%s`
runtime=$((end-start))
echo "Runtime: $runtime seconds"
#-------------------------------------------------------------------------------------# 
exit 0 